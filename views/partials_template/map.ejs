<!DOCTYPE html>
<html>
  <head>
    <title>Simple Map</title>
    <meta name="viewport" content="initial-scale=1.0">
    <meta charset="utf-8">
    <style>
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      #map {
        height: 100%;
      }
    </style>
  </head>
  <body>
    <div id="map"></div>
    <script>

var map;
function initMap() {
  map = new google.maps.Map(document.getElementById('map'), {
    center: {lat: 20, lng: -20},
    zoom: 2,
    mapTypeControl: false,
    streetViewControl: false,
    mapTypeId: google.maps.MapTypeId.SATELLITE
  });
}

    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDTdeav80CxRzqtWK7D8BbXSfEMkzDLV0Y&callback=initMap"
        async defer></script>
  </body>
</html>
