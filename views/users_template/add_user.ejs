<!DOCTYPE html>
<html>
  <head>
    <% include ./../partials_template/head %>
  </head>

  <body data-spy="scroll" data-offset="0" data-target="#theMenu">

    <% include ./../partials_template/header %>
    <% include ./../partials_template/menu_templates/menu_sub_user %>

    <section id="home" name="home"></section>
    <div id="headerwrap" style="background:white">
      <div class="container">
        <div class="row">
          <h1 style="color:black">Add User - Local Admin/Delegates</h1>

          <% if (message && message.length>0) { %>
              <div class="alert alert-danger"><%= message %></div>
          <% } %>
          
        </div>
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
          <!-- form for entering user info -->
          <form class="" action="/user/add" method="post">
            
              <input type="text" name="firstName" value="" placeholder="First Name">
              <input type="text" name="lastName" value="" placeholder="Last Name">
              <input type="text" name="username" value="" placeholder="username">
              <input type="text" name="email" value="" placeholder="email">
              <input type="password" name="password" value="" placeholder="password">
            
            <p class="submit"><input type="submit" name="commit" value="Submit"></p>
          </form>
        </div>
      </div>
    </div>

    <footer>
    <% include ../partials_template/footer %>
  </footer>

  </body>
</html>
